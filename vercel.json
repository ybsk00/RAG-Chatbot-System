{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/chat",
            "dest": "/api/main.py"
        },
        {
            "src": "/docs",
            "dest": "/api/main.py"
        },
        {
            "src": "/openapi.json",
            "dest": "/api/main.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}